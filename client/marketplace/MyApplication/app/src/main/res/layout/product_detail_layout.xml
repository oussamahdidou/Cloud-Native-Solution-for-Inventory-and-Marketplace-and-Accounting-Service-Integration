<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/product_detail_background"
        android:orientation="vertical"
        android:paddingTop="18dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/button2"
            android:layout_width="100dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/material_dynamic_neutral80"
            android:textColor="@color/white"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="366dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="18dp"
            android:background="#eeeeee"
            app:srcCompat="@drawable/item_4" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-black"
            android:paddingLeft="18dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Majestic Smart TV"
            android:textColor="@color/black"
            android:textSize="24sp"
            tools:paddingRight="18dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-medium"
            android:paddingLeft="18dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="$ 120"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:paddingRight="18dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingBottom="8dp"
            android:text="Explore the future of shopping with our latest minimalist e-commerce app interface design! An intuitive and sleek mobile e-commerce app that simplifies the shopping experience. With a focus on minimalism, we've stripped away the clutter to put the spotlight on your products." />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:backgroundTint="@color/black"
            android:text="Add To Cart"
            android:textColor="@color/white"
            android:visibility="visible"
            tools:visibility="visible" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>